<h2>Settings</h2>

<h5 class='faded'>@<%= current_user.username %></h5>

<hr>

<h3>User Info</h3>

<%= form_for @customer do |f| %>
  <%= f.label :first_name %><br>
  <%= f.text_field :first_name %><br>

  <%= f.label :last_name %><br>
  <%= f.text_field :last_name %><br>

  <%= f.label :email %><br>
  <%= f.text_field :email %><br>

  <%= f.label :phone %><br>
  <%= f.text_field :phone %><br>

  <hr>

  <h3>Tab Limits</h3>

   <%= f.submit 'Save Settings', class: "btn btn-primary full-width" %><br />
<% end %>

<hr>
