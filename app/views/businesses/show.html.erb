
<h1 class="business-title"><%= name(current_user) %></h1>

<hr>
<form action='' role="search" id="customer-lookup">
  <div class="input-group">
    <input type='search' class="form-control" name='search' placeholder='username, first name, or last name'>
    <span class="input-group-btn">
      <input type='submit' value='Search' class="btn btn-info">
    </span>
  </div>
</form>
<div class="alert alert-info alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  Look up customers by their <strong>@username</strong>, <strong>first name</strong>, or <strong>last name</strong>.
</div>
<hr>
<h3>Open Tabs:</h3>
<% if params[:search] %>
  <li class="list-group-item justify-content-between"><%= link_to 'Show all tabs', @business %></li>
<% end %>
<% if params[:search] && @tabs.empty? %>
  <li class="list-group-item justify-content-between">No open tabs under '<%= params[:search] %>'.</li>
<% else %>
  <%= render @tabs %>
<% end %>
</ul>
